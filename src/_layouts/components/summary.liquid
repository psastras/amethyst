<section class="post">
  <h2 class="post-title">{{ post.title }}</h2>
  <p class="post-meta">
    {% if post.author %}
      By <span class="post-author">{{ post.author }}</span>
    {% endif %}
    {% if post.tags %}
      {% if post.author %}
        under 
      {% endif %}
      {% for tag in post.tags %}
        <span class="post-category post-category-{{ tag | downcase | replace: ' ', '-' }}">
          {{ tag }}
        </span>
      {% endfor %}
    {% endif %}
  </p>
  <div class="post-description">
    <p>
      {% if post.description %}
        {{ post.description }}
      {% else %}
        {{ post.content }}
      {% endif %}
    </p>
    <p>
      {% if post.description %}
        <a href="{{post.path}}">Read the full post</a>
      {% endif %}
    </p>
  </div>
</section>