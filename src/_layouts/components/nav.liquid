<div class="header">
  <h1 class="brand-title">A Sample Blog</h1>
  <h2 class="brand-tagline">Sample blog description</h2>

  <nav class="nav" role="navigation">
    <ul class="nav-list">
      {% for link in site.data.meta.site_links %}
        <li class="nav-item">
          <a class="pure-button" 
            href="{{ site.data.meta.base_path }}{{ link.url }}">
            {{ link.name }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</div>